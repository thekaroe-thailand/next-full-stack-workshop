generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Apartment {
  id        String   @id @default(cuid())
  name      String
  address   String
  phone     String
  email     String?
  lineId    String?
  taxCode   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}

model RoomType {
  id        String   @id @default(cuid())
  name      String
  price     Int
  remark    String?
  status    String   @default("active") // active, inactive
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
  rooms     Room[]
}

model Room {
  id            String         @id @default(cuid())
  name          String
  towerName     String
  totalLevel    Int
  totalRoom     Int
  roomTypeId    String
  roomType      RoomType       @relation(fields: [roomTypeId], references: [id])
  remark        String?
  status        String         @default("active") // active, inactive
  statusEmpty   String         @default("empty") // empty, accupied
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  bookings      Booking[]
  bills         Bill[]
  fromTransfers RoomTransfer[] @relation("FromRoom")
  toTransfers   RoomTransfer[] @relation("ToRoom")
  moveOuts      MoveOut[]
}

model Booking {
  id              String           @id @default(cuid())
  customerName    String
  customerPhone   String
  customerAddress String?
  cardId          String?
  gender          String           @default("male")
  roomId          String
  room            Room             @relation(fields: [roomId], references: [id])
  remark          String?
  status          String           @default("active") // active, inactive
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt
  stayAt          DateTime
  stayTo          DateTime?
  deposit         Int              @default(0)
  electricityLogs ElectricityLog[]
  waterLogs       WaterLog[]
  bills           Bill[]
  transfers       RoomTransfer[]
  moveOuts        MoveOut[]
}

model ElectricityLog {
  id              String   @id @default(cuid())
  bookingId       String
  booking         Booking  @relation(fields: [bookingId], references: [id])
  electricityUnit Int
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model WaterLog {
  id        String   @id @default(cuid())
  bookingId String
  booking   Booking  @relation(fields: [bookingId], references: [id])
  waterUnit Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model MoneyAdded {
  id        String   @id @default(cuid())
  name      String
  amount    Int
  status    String   @default("active") // active, inactive
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model WaterAndElectricityPrice {
  id                      String   @id @default(cuid())
  waterPricePerUnit       Int
  electricityPricePerUnit Int
  createdAt               DateTime @default(now())
  updatedAt               DateTime @updatedAt
}

model Bill {
  id              String     @id @default(cuid())
  roomId          String
  room            Room       @relation(fields: [roomId], references: [id])
  bookingId       String
  booking         Booking    @relation(fields: [bookingId], references: [id])
  billDate        DateTime
  dueDate         DateTime?
  paymentDate     DateTime?
  totalAmount     Int
  waterUnit       Int
  electricityUnit Int
  waterCost       Int
  electricityCost Int
  roomPrice       Int
  additionalCost  Int        @default(0)
  lateFee         Int        @default(0)
  status          String     @default("pending") // active, inactive
  createdAt       DateTime   @default(now())
  updatedAt       DateTime   @updatedAt
  billItems       BillItem[]
}

model BillItem {
  id        String   @id @default(cuid())
  billId    String
  bill      Bill     @relation(fields: [billId], references: [id])
  name      String
  amount    Int
  type      String // water, electricity, room, additional
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model RoomTransfer {
  id           String    @id @default(cuid())
  fromRoomId   String
  fromRoom     Room      @relation("FromRoom", fields: [fromRoomId], references: [id])
  toRoomId     String
  toRoom       Room      @relation("ToRoom", fields: [toRoomId], references: [id])
  bookingId    String
  booking      Booking   @relation(fields: [bookingId], references: [id])
  transferDate DateTime  @default(now())
  reason       String
  transferFee  Int       @default(0)
  status       String    @default("pending") // active, inactive
  approveBy    String?
  approveAt    DateTime?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
}

model MoveOut {
  id             String    @id @default(cuid())
  roomId         String
  room           Room      @relation(fields: [roomId], references: [id])
  bookingId      String
  booking        Booking   @relation(fields: [bookingId], references: [id])
  moveOutDate    DateTime  @default(now())
  reason         String
  despositReturn Int       @default(0) // คืนเงินประกัน
  refund         Int       @default(0) // ค่าปรับเพิ่ม
  status         String    @default("pending") // active, inactive
  approveBy      String?
  approveAt      DateTime?
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
}
