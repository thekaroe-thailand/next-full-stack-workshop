generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Apartment {
  id        String   @id @default(cuid())
  name      String
  address   String
  phone     String
  email     String?
  lineId    String?
  taxCode   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}

model RoomType {
  id        String   @id @default(cuid())
  name      String
  price     Int
  remark    String?
  status    String   @default("active") // active, inactive
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
  rooms     Room[]
}

model Room {
  id          String    @id @default(cuid())
  name        String
  towerName   String
  totalLevel  Int
  totalRoom   Int
  roomTypeId  String
  roomType    RoomType  @relation(fields: [roomTypeId], references: [id])
  remark      String?
  status      String    @default("active") // active, inactive
  statusEmpty String    @default("empty") // empty, accupied
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  bookings    Booking[]
}

model Booking {
  id              String           @id @default(cuid())
  customerName    String
  customerPhone   String
  customerAddress String?
  cardId          String?
  gender          String           @default("male")
  roomId          String
  room            Room             @relation(fields: [roomId], references: [id])
  remark          String?
  status          String           @default("active") // active, inactive
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt
  stayAt          DateTime
  stayTo          DateTime?
  deposit         Int              @default(0)
  electricityLogs ElectricityLog[]
  waterLogs       WaterLog[]
}

model ElectricityLog {
  id              String   @id @default(cuid())
  bookingId       String
  booking         Booking  @relation(fields: [bookingId], references: [id])
  electricityUnit Int
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model WaterLog {
  id        String   @id @default(cuid())
  bookingId String
  booking   Booking  @relation(fields: [bookingId], references: [id])
  waterUnit Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
